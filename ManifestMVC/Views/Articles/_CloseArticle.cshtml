@model DataLayer.ViewModels.ArticleVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title">
        [[[Close Article]]] - @(Model.Title)
    </h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, new { @class = "control-label" })
                <div class="help-block">
                    @Html.DisplayTextFor(model => model.Title)
                </div>
            </div>

            <h4 class="form-group">[[[Are you sure you want to close it?]]]</h4>
        </div>
    </div>

    <div class="modal-footer">
        <input type="submit" value="[[[Close Article]]]" class="btn btn-primary" />
        <button type="button" class="btn btn-default" data-dismiss="modal">[[[Cancel]]]</button>
    </div>
}
